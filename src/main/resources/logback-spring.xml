<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <property name="APP_NAME" value="job-scheduler-service" />
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXX} [%thread] %-5level %logger{36} - %msg%n" />

    <!-- JSON console logging for central log aggregation -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.console.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app_name":"${APP_NAME}"}</customFields>
        </encoder>
    </appender>

    <!-- Optional simple pattern console (uncomment for local dev)
    <appender name="CONSOLE" class="ch.qos.logback.core.console.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    -->

    <logger name="org.springframework" level="INFO" />
    <logger name="org.springframework.data.redis" level="INFO" />
    <logger name="net.javacrumbs.shedlock" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="CONSOLE_JSON" />
    </root>
</configuration>
